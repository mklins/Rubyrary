<%= render 'shared/errors', object: author %>

<%= form_with model: [:admin, author] do |f| %>
    <div class="justify-content-center mb-3 row">
        <div class="col-sm-1 col-form-label">
            <%= f.label :name %>
        </div>

        <div class="col-sm-5">
            <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
        </div>
    </div>

    <div class="container">
        <div class="col-md-12 text-center">
            <%= f.submit "Update", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>